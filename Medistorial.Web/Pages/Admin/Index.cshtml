@model Medistorial.Web.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].BloodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].OSUserCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].TimeStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OSUserCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
