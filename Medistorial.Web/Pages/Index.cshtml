@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div>
    <h2>Bienvenidos a Medistorial</h2>
</div>


<p>
    <a asp-page="CreatePatient">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].BloodType)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].OSUserCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].LastName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BloodType)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OSUserCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            
                <td>

                    <a asp-page="./Patient" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-page="./EditPatient" asp-route-id="@item.Id">Editar</a>
                    <a asp-page="./DeletePatient" asp-route-id="@item.Id">Borrar</a>
                    <a asp-page="./Users/Index" asp-route-id="@item.Id">Llenar</a>

                </td>
            </tr>
        }
    </tbody>
</table>